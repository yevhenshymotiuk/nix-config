#!/usr/bin/env bash

AIRPODS="D0:65:44:A6:0B:64"

connected_device="$(bluetoothctl info | grep Device | sed -e "s/Device //" -e "s/ (public)//")"
device="$AIRPODS"
action="connect"

[ "$#" = 0 ] || device="$1"
[ "$device" = "$connected_device" ] && action="disconnect"
eval "bluetoothctl $action $device"
