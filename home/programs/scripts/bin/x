#!/usr/bin/env bash

FILE="$1"
BASENAME="${FILE%%.*}"
EXTENSION="${FILE##*.}"
DESTINATION="$BASENAME"

if [ "$2" ]; then
    DESTINATION="$2"
fi

case "$EXTENSION" in
    "gz")
        mkdir "$DESTINATION"
        tar xvf "$FILE" --directory "$DESTINATION"
        ;;
    "zip")
        unzip "$FILE" -d "$DESTINATION"
        ;;
    "rar")
        unrar x "$FILE" "$DESTINATION"
        ;;
    *)
        tar cvzf "$BASENAME.tar.gz" "$FILE"
        ;;
esac
